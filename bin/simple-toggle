#!/usr/bin/env bash

# simple toggle the first two windows, most likely it's the terminal and chrome

# best fit for ubuntu 20.04 shortcut
# open Settings > Keyboard Shortcuts > add custom shortcut
#    key: Ctrl + Space
#    command: zsh -c "source .zshrc; simple-toggle"

current="$(xdotool getwindowfocus getwindowname)"
nextid="$(wmctrl -l | grep -v ' 1 ' | grep -vF "$current" | cut -d ' ' -f1 | head -n 1)"
wmctrl -i -a "$nextid"
